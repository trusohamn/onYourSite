<div class="container">
  <div class="row">

    <form id="mainForm" action="/generate" method="POST">
      <div class="col-md-5 container">
        <div class="row">
          <label for="pathInput" class="col-md-2">Path</label>
          <div class="col-md-5">
          <input id="pathInput" class="form-control" name="_id" type="text" required="" /><br />
          </div>
        </div>

        <div class="row">
          <label for="chooseStyle" class="col-md-2">Style</label>
          <div class="col-md-5">
            <select id="chooseStyle" name="styles" class="form-control">
              <option value="red.css">Red</option>
              <option value="blue.css">Blue</option>
              <option value="black.css">Black</option>
            </select>
          </div>
        </div>
        <div class="buttons">
          <button id="submit" class="btn btn-primary" type="submit" value="Generate profile">Generate</button>
          <button id="preview" class="btn btn-primary" method="POST" value="Preview"
            target="iframe_a.srcdoc">Preview</button>
        </div>
    

        <ul id="inputList" class="list-unstyled">
          <li>
            <textarea name="text_1" class="form-control" placeholder="new text"></textarea>
            <select name="class_1" class="form-control">
              <option value="class1">Normal</option>
              <option value="class2">Large</option>
              <option value="class3">Italic</option>
              <option value="header">Gray</option>
            </select>
          </li>
          <li>
            <input id="imageUrlField" class="form-control" placeholder="image url" name="image_2" type="text" />
            <select name="class_2" class="form-control">
              <option value="round">Round</option>
              <option value="square">Square</option>
              <option value="rectangular">Rectangular</option>
            </select>
          </li>
        </ul>

        <button id="addNew" class="btn btn-primary" value="2">Add text</button>
        <br />
      </div>
    </form>
    <div class="col-md-6">
      <form class="mainForm" id="flickrForm">
        <input id="flikrInput" class="form-control" type="text" name="name" placeholder="Search for image" />
        <button class="btn btn-primary" type="submit" name="submit" value="submit">Random!</button>
      </form>
      <div class="embed-responsive embed-responsive-16by9">
        <iframe id="show-preview" name="iframe_a" srcdoc="" class="embed-responsive-item" allowfullscreen></iframe>
      </div>
    </div>
  </div>


</div>



<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.1/jquery.min.js"></script>
<script src="client.js"></script>